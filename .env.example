# -----------------
# Django Settings
# -----------------
DEBUG=True
SECRET_KEY=your-secret-key-change-in-production
ALLOWED_HOSTS=localhost,127.0.0.1,0.0.0.0

# CORS 설정
CORS_ALLOWED_ORIGINS=http://localhost:10005,http://localhost:10003,http://localhost

# -----------------
# Database Settings
# -----------------
MYSQL_HOST=db
MYSQL_DATABASE=email_reports
MYSQL_ROOT_PASSWORD=rootpassword
MYSQL_USER=django_user
MYSQL_PASSWORD=django_password
MYSQL_PORT=3308

# -----------------
# Frontend Settings
# -----------------
VITE_API_BASE_URL=http://localhost:10004

# -----------------
# Nginx Settings
# -----------------
NGINX_PORT=10003

